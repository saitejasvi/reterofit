<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:text="city name"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="300dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/tv_city_name"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:text="Speed"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/deg"
            android:text="Speed"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/temp"
            android:text="Speed"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/humidity"
            android:text="Speed"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sunrise"
            android:text="Speed"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sunset"
            android:text="Speed"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkedTextView2"
        android:layout_toLeftOf="@+id/ratingBar2"
        android:layout_toStartOf="@+id/ratingBar2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/space"
        android:layout_toRightOf="@+id/tv_city_name"
        android:layout_toEndOf="@+id/tv_city_name"
        android:layout_marginTop="25dp" />

    <ImageSwitcher
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="18dp" />

</RelativeLayout>